package ProjectPackage;

import java.io.*;
import java.util.ArrayList;

public class Item {
    private int itemID;
    private String itemName;
    private double itemPrice;
    private String itemDescription;
    private int itemQuantity;
    private String itemType;

    public static ArrayList<Item> itemList = new ArrayList<>();

    public Item(){
        init();
    }

    public Item (int itemID, String itemName, double itemPrice, String itemDescription, int itemQuantity,String itemType){

        this.itemID = itemID;
        this.itemName = itemName;
        this.itemPrice = itemPrice;
        this.itemDescription = itemDescription;
        this.itemQuantity = itemQuantity;
        this.itemType = itemType;
    }

    public void init(){
        Item item1 = new Item(1,"table",200.0,"The most useful table in the world",5,"Manufacturing");
        Item item2 = new Item(2,"computer",300.0,"The fastest computer in the world",6,"Electronics");
        Item item3 = new Item(3,"War book",40.0,"This book is best seller",7,"Books");
        Item item4 = new Item(4,"Mouse",45,"This mouse has very useful features",50,"Electronics");
        Item item5 = new Item(5,"Keyboard",100,"This keyboard has very useful features",2000,"Electronics");
        Item item6 = new Item(6,"Television",10000,"This television has very useful features",200,"Manufacturing");

        itemList.add(item1);
        itemList.add(item2);
        itemList.add(item3);
        itemList.add(item4);
        itemList.add(item5);
        itemList.add(item6);
        try {
            String str ;
            BufferedOutputStream bos = new BufferedOutputStream(new FileOutputStream("products.txt",true));
            for(int i=0;i<itemList.size();i++) {
                str = String.valueOf(itemList.get(i));
                byte[] byteCalc = str.getBytes();

                bos.write(byteCalc);
                bos.flush();
            }
            bos.close();
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // METHODS

    public void getItemList(){
        for (int i = 0; i<itemList.size();i++){
            System.out.println(itemList.get(i).getName());
        }
    }

    public void getItemDescription(int id){
        for (int i = 0; i<itemList.size();i++){
            if (itemList.get(i).getID() == id){
                System.out.println(itemList.get(i).getDescription());
            }
        }
    }

    public static void removeItem(String itemName){
        for (int i=0;i<itemList.size();i++){
            if (itemList.get(i).getName().equals(itemName)){
                itemList.remove(i);
            }
        }
    }

    public void ListProductOfType(){
        for (int i=0;i<itemList.size();i++){
            System.out.println(itemList.get(i).itemType);
        }
    }

    public void addItemToList(Item item){
        itemList.add(item);
    }

    public void getItemType(String itemType){
        for (int i=0;i<itemList.size();i++){
            if (itemList.get(i).getItemType().equals(itemType)){
                System.out.println("Item Name : " + itemList.get(i).itemName + " Item ID : " + itemList.get(i).getID());
            }
        }
    }

    // GETTERS

    public int getID(){
        return itemID;
    }

    public String getName(){
        return itemName;
    }

    public double getPrice(){
        return itemPrice;
    }

    public String getDescription(){
        return itemDescription;
    }

    public int getQuantity(){
        return itemQuantity;
    }

    public String getItemType() {
        return itemType;
    }
}

