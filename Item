package ProjectPackage;

import java.util.ArrayList;

public class Item {
    private int itemID;
    private String itemName;
    private double itemPrice;
    private String itemDescription;
    private int itemQuantity;
    public static ArrayList<Item> itemList = new ArrayList<>();
    public Item(){
        init();
    }
    public Item (int itemID, String itemName, double itemPrice, String itemDescription, int itemQuantity){
        this.itemID = itemID;
        this.itemName = itemName;
        this.itemPrice = itemPrice;
        this.itemDescription = itemDescription;
        this.itemQuantity = itemQuantity;
    }
    public void init(){
        Item item1 = new Item(1,"table",200.0,"The most useful table in the world",5);
        Item item2 = new Item(2,"computer",300.0,"The fastest computer in the world",6);
        Item item3 = new Item(3,"book",40.0,"This book is best seller",7);
        itemList.add(item1);
        itemList.add(item2);
        itemList.add(item3);
    }
    public void getItemList(){
        for (int i = 0; i<itemList.size();i++){
            System.out.println(itemList.get(i).getName());
        }
    }
    public void getItemDescription(int id){
        for (int i = 0; i<itemList.size();i++){
            if (itemList.get(i).getID() == id){
                System.out.println(itemList.get(i).getDescription());
            }
        }
    }
    public static void removeItem(String itemName){
        for (int i=0;i<itemList.size();i++){
            if (itemList.get(i).getName().equals(itemName)){
                itemList.remove(i);
            }
        }
    }
    public void addItemToCart(Item item){
        itemList.add(item);
    }

    public int getID(){
        return itemID;
    }

    public String getName(){
        return itemName;
    }

    public double getPrice(){
        return itemPrice;
    }

    public String getDescription(){
        return itemDescription;
    }

    public int getQuantity(){
        return itemQuantity;
    }
}

